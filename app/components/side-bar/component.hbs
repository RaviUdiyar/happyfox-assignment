<div class="flex flex-col p-4 border-r-2">
  <input
    aria-label="search employees"
    type="text"
    class="search border border-grey p-2 mb-2"
    placeholder="Search"
    value={{this.searchTerm}}
    {{on "input" (pipe (pick "target.value") @filterEmployeesOnSearchTerm)}}
  />
  <select
    aria-label="filter employees"
    value={{this.selectedTeam}}
    class="border border-grey p-2 mb-2 mt-2"
    {{on "change" (pipe (pick "target.value") @filterEmployeesOnTeam)}}
  >
    <option value="all">All</option>
    {{#each @allTeams as |team|}}
      <option value={{@team}} >{{team}}</option>
    {{/each}}
  </select>

  <Employees::List
    @employees={{@employees}}
  />
</div>
